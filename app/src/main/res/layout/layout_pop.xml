<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    tool:background="@color/accent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toys_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_selected"
        android:padding="8dp"/>

    <View
        android:id="@+id/view_line_vertical"
        android:layout_width="2dp"
        android:layout_height="28dp"
        android:layout_below="@+id/iv_cancel"
        android:layout_marginTop="-6dp"
        android:layout_alignRight="@+id/iv_cancel"
        android:layout_marginRight="18.5dp"
        android:background="@android:color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_theme"
        android:layout_below="@id/view_line_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@android:color/white">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>